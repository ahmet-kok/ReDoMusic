@using ReDoMusic.Domain.Entites;
@model List<Instrument>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Store</title>
    <!-- Add Bootstrap CSS link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

    <!-- Product Listing -->
    <div class="container mt-4">
        <div class="row">
            @foreach (var instrument in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@instrument.ImageURL" class="card-img-top" alt="@instrument.Name">
                        <div class="card-body">
                            <h5 class="card-title">@instrument.Name</h5>
                            <p class="card-text">@instrument.Brand.Name</p>
                            <p class="card-text">@instrument.Model</p>
                            <p class="card-text">Price: $@instrument.Price</p>
                            <div class="btn-group" role="group">
                                @if (instrument.IsInBasket)
                                {
                                    <a asp-controller="ShoppingCart" asp-action="AddCartItem" asp-route-id="@instrument.Id" disabled class="disabled btn btn-danger w-max">Add to Cart</a>
                                }
                                else
                                {
                                    <a asp-controller="ShoppingCart" asp-action="AddCartItem" asp-route-id="@instrument.Id" class="btn btn-primary">Add to Cart</a>

                                }
                                <a asp-controller="Comment" asp-action="Index" asp-route-id="@instrument.Id" class="btn btn-primary ml-2">Go to Comments</a>
                                @if (instrument.Starred)
                                {
                                    <a asp-controller="Instrument" asp-action="RemoveFromStarList" asp-route-id="@instrument.Id"  type="button" class="btn btn-success w-18 h-18">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"></path>
                                        </svg>
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Instrument" asp-action="AddToStarList" asp-route-id="@instrument.Id"  type="button" class="btn  w-18 h-18">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"></path>
                                        </svg>
                                    </a>

                                }
                            </div>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>

</body>
</html>
