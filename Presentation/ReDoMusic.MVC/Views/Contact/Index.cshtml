@using ReDoMusic.Domain.Entities;
@model List<Contact>


<div class="container mt-3">
    <h2>Contacts</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Subject</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.FirstName</td>
                    <td>@contact.LastName</td>
                    <td>@contact.Email</td>
                    <td>@contact.Subject</td>
                    <td><a asp-action="ResultContact" asp-route-id="@contact.Id" class="btn btn-success">Result</a></td>
                    <td><a asp-action="DeleteContact" asp-route-id="@contact.Id" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


