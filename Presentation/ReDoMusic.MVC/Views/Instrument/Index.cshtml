@using ReDoMusic.Domain.Entites;
@model List<Instrument>

<div class="container mt-3">
    <h2>Instruments</h2>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Model</th>
                <th>Color</th>
                <th>Price</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ınstrument in Model)
            {
                <tr>
                    <td>@ınstrument.Name</td>
                    <td>@ınstrument.Model</td>
                    <td>@ınstrument.Color</td>
                    <td>@ınstrument.Price</td>
                    <td><a asp-action="DeleteInstrument" asp-route-id="@ınstrument.Id" class="btn btn-outline-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>