<h2>Add Instrument</h2>

<form method="post">
    <div class="mb-3 mt-3">
        <label class="form-label">Instrument Type:</label>
        <input type="text" class="form-control" placeholder="Enter Instrument Name" name="instrumentName">
    </div>
    <div class="mb-3 mt-3">
        <label class="form-label">Brand Name:</label>
        <input type="text" class="form-control" placeholder="Enter Brand Name" name="brandName">
    </div>
    <div class="mb-3 mt-3">
        <label class="form-label">Displaing Text:</label>
        <input type="text" class="form-control" placeholder="Enter Displaing Text" name="brandDisplayText">
    </div>
    <div class="mb-3 mt-3">
        <label class="form-label">Address:</label>
        <input type="text" class="form-control" placeholder="Enter Address" name="brandAddress">
    </div>
    <div class="mb-3 mt-3">
        <label class="form-label">Price:</label>
        <input type="text" class="form-control" placeholder="Enter Price" name="price">
    </div>
    <div class="mb-3 mt-3">
        <label class="form-label">Model:</label>
        <input type="text" class="form-control" placeholder="Enter Model" name="instrumentModel">
    </div>
    <div class="mb-3 mt-3">
        <label class="form-label">Color:</label>
        <input type="text" class="form-control" placeholder="Enter Color" name="instrumentColor">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form> 