        < label class= "form-label" > Comment Text:</ label >
        < input type = "text" class= "form-control" placeholder = "Enter Comment" name = "commentText" >
    </ div >
    < div class= "mb-3 mt-3" >
        < label class= "form-label" > Instrument Id:</ label >
        < input type = "text" class= "form-control" placeholder = "Enter Displaing Text" name = "InstrumentId" >
    </ div >
    < button type = "submit" class= "btn btn-primary" > Post Comment </ button >
</ form > 